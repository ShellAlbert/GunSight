#!/bin/bash

#set -x
if [ $# -ne 2 ]; then
    echo "usage:$0 [mplayer|mpv] file"
    exit
fi

export VDPAU_DRIVER=sunxi
if [ "x$1" = "xmplayer" ]; then
    mplayer -vo vdpau -vc ffmpeg12vdpau,ffh264vdpau, ${2}
    exit
elif [ "x$1" = "xmpv" ]; then
    mpv -vo=vdpau -hwdec=vdpau -hwdec-codecs=all ${2}
    exit
fi

